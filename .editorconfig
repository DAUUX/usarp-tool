root = true

# Regras padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Arquivos JavaScript e JSX
[*.{js,jsx}]
quote_type = double
max_line_length = 120

# Arquivos JSON e YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Arquivos CSS e SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2
insert_final_newline = true

# Arquivos Markdown — mantém espaços no final
[*.md]
trim_trailing_whitespace = false

# Arquivos HTML
[*.html]
indent_style = space
indent_size = 2
